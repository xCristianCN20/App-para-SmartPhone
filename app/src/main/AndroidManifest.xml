<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miguel.mexiwear">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/miicono"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />

        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".MiVacOffActivity"
            android:exported="false"
            android:label="@string/title_activity_mi_vac_off"></activity>
        <activity
            android:name=".ListaVacOffActivity"
            android:exported="false"
            android:label="@string/title_activity_lista_vac_off" />
        <activity
            android:name=".ListaMisVacantesActivity"
            android:exported="false"
            android:label="@string/title_activity_lista_mis_vacantes" />
        <activity
            android:name=".MiVacanteActivity"
            android:exported="false"
            android:label="@string/title_activity_mi_vacante" />
        <activity
            android:name=".VacanteActivity"
            android:exported="false"
            android:label="@string/title_activity_vacante" />
        <activity
            android:name=".ListaVacantesCercaActivity"
            android:exported="false"
            android:label="@string/title_activity_lista_vacantes_cerca" />
        <activity
            android:name=".SolicitudActivity"
            android:exported="false"
            android:label="@string/title_activity_solicitud" />
        <activity
            android:name=".MenuTrabajadorActivity"
            android:exported="false"
            android:label="@string/title_activity_menu_trabajador" />
        <activity
            android:name=".ListaSolicitudesActivity"
            android:exported="false"
            android:label="@string/title_activity_lista_solicitudes" />
        <activity
            android:name=".PostulacionActivity"
            android:exported="false"
            android:label="@string/title_activity_postulacion" />
        <activity
            android:name=".ListaPostulacionesActivity"
            android:exported="true"
            android:label="@string/title_activity_lista_postulaciones" />
        <activity
            android:name=".MenuEmplActivity"
            android:exported="false"
            android:label="@string/title_activity_menu_empl" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>